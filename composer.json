{
  "name": "unzerdev/shopware-5",
  "type": "shopware-plugin",
  "description": "Unzer payment integration for Shopware 5",
  "license": "MIT",
  "authors": [
    {
      "name": "Unzer GmbH",
      "email": "support@unzer.com",
      "homepage": "https://www.unzer.com/de/support/"
    },
    {
      "name": "Kellerkinder / Pluginwerk GmbH",
      "email": "hallo@pluginwerk.de",
      "homepage": "https://www.pluginwerk.de",
      "role": "Contributor"
    }
  ],
  "autoload": {
    "psr-4": {
      "UnzerPayment\\": "."
    }
  },
  "require": {
    "composer/installers": "^1.5",
    "unzerdev/php-sdk": "1.1.1.1"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "k10r/codestyle": "^1.0",
    "phpstan/phpstan": "0.12.*"
  },
  "extra": {
    "installer-name": "UnzerPayment"
  },
  "scripts": {
    "phpstan": "./vendor/bin/phpstan analyse .",
    "phpcs:lint": "./vendor/bin/php-cs-fixer fix --dry-run -v",
    "phpcs:fix": "./vendor/bin/php-cs-fixer fix",
    "eslint": "npm run backend:fix && npm run frontend:fix"
  }
}
