<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="unzer_payment.view_behaviors.installment_secured" class="UnzerPayment\Components\ViewBehaviorHandler\InstallmentSecuredViewBehaviorHandler">
            <argument type="service" id="unzer_payment.services.api_client"/>
            <argument type="service" id="unzer_payment.services.api_logger"/>

            <tag name="unzer_payment.view_behavior" payment="unzerPaymentInstallmentSecured"/>
        </service>

        <service id="unzer_payment.view_behaviors.invoice" class="UnzerPayment\Components\ViewBehaviorHandler\InvoiceViewBehaviorHandler">
            <argument type="service" id="unzer_payment.services.api_client"/>
            <argument type="service" id="unzer_payment.services.api_logger"/>

            <tag name="unzer_payment.view_behavior" payment="unzerPaymentInvoice"/>
        </service>

        <service id="unzer_payment.view_behaviors.invoice_secured" class="UnzerPayment\Components\ViewBehaviorHandler\InvoiceViewBehaviorHandler">
            <argument type="service" id="unzer_payment.services.api_client"/>
            <argument type="service" id="unzer_payment.services.api_logger"/>

            <tag name="unzer_payment.view_behavior" payment="unzerPaymentInvoiceSecured"/>
        </service>

        <service id="unzer_payment.view_behaviors.prepayment" class="UnzerPayment\Components\ViewBehaviorHandler\PrepaymentViewBehaviorHandler">
            <argument type="service" id="unzer_payment.services.api_client"/>
            <argument type="service" id="unzer_payment.services.api_logger"/>

            <tag name="unzer_payment.view_behavior" payment="unzerPaymentPrepayment"/>
        </service>
    </services>
</container>
